{
  "openapi": "3.0.1",
  "info": {
    "title": "Movie Battle OpenAPI definition - Kadu Borges' Solution",
    "version": "v0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "For Movie Battle local test purposes only "
    }
  ],
  "security": ["oAuth2Security"],
  "paths": {
    "/api/quizzes/start": {
      "description": "This function creates a QUIZ ready to be played.",
      "post": {
        "tags": [
          "quiz-controller"
        ],
        "operationId": "startQuiz",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Quiz"
                }
              }
            }
          }
        }
      }
    },
    "/api/quizzes/finish": {
      "description": "This function finishes a QUIZ.",
      "post": {
        "tags": [
          "quiz-controller"
        ],
        "operationId": "finishQuiz",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/quizzes/questions": {
      "description": "This resource represents a QUESTION of an active QUIZ",
      "get": {
        "tags": [
          "quiz-controller"
        ],
        "operationId": "getQuestion",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Question"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "quiz-controller"
        ],
        "operationId": "createQuestion",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Question"
                }
              }
            }
          }
        }
      }
    },
    "/api/quizzes/questions/answer": {
      "description": "This resource represents the ANSWER of an unanswered QUESTION",
      "post": {
        "tags": [
          "quiz-controller"
        ],
        "operationId": "answerQuestion",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Response"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Answer"
                }
              }
            }
          }
        }
      }
    },
    "/api/ranking": {
      "description": "This resource represents the RANKING of the best players of Movie Battle",
      "get": {
        "tags": [
          "ranking-controller"
        ],
        "operationId": "getRanking",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RankingPosition"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Answer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "selectedOption": {
            "$ref": "#/components/schemas/MovieCard"
          },
          "correct": {
            "type": "boolean"
          }
        }
      },
      "MovieCard": {
        "type": "object",
        "properties": {
          "imdbId": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "releasedYear": {
            "type": "string"
          },
          "posterUrl": {
            "type": "string"
          },
          "imdbRating": {
            "type": "number",
            "format": "double"
          },
          "imdbVotes": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "Question": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "cardOne": {
            "$ref": "#/components/schemas/MovieCard"
          },
          "cardTwo": {
            "$ref": "#/components/schemas/MovieCard"
          },
          "answer": {
            "$ref": "#/components/schemas/Answer"
          }
        }
      },
      "Quiz": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "username": {
            "type": "string"
          },
          "questionList": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Question"
            }
          },
          "mistakes": {
            "type": "integer",
            "format": "int32"
          },
          "active": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "version": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "Response": {
        "type": "object",
        "properties": {
          "imdbId": {
            "type": "string"
          }
        }
      },
      "RankingPosition": {
        "type": "object",
        "properties": {
          "player": {
            "type": "string"
          },
          "score": {
            "type": "number",
            "format": "double"
          }
        }
      }
    },
    "securitySchemes": {
      "oAuth2Security": {
        "type": "oauth2",
        "description":"This API uses OAuth2 with the password grant type flow.",
        "flows": [
          {
            "password": {
              "tokenUrl": "http://localhost:8083/oauth/token",
              "refreshUrl": "http://localhost:8083/oauth/token",
              "scopes": [
                {
                  "play": "Play the game: create and finish quizzes, create questions and submit responses."
                }
              ]
            }
          }
        ]
      }
    }
  }
}