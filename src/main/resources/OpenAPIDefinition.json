{
  "openapi": "3.0.1",
  "info": {
    "title": "Movie Battle OpenAPI definition",
    "version": "v0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Resource Server"
    },
    {
      "url": "http://localhost:8083",
      "description": "Authorization Server"
    }
  ],
  "paths": {
    "/api/quiz/start": {
      "post": {
        "tags": [
          "quiz-controller"
        ],
        "operationId": "startQuiz",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Quiz"
                }
              }
            }
          }
        }
      }
    },
    "/api/quiz/question/answer": {
      "post": {
        "tags": [
          "quiz-controller"
        ],
        "operationId": "answerQuestion",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Response"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Answer"
                }
              }
            }
          }
        }
      }
    },
    "/api/quiz/finish": {
      "post": {
        "tags": [
          "quiz-controller"
        ],
        "operationId": "finishQuiz",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/ranking": {
      "get": {
        "tags": [
          "ranking-controller"
        ],
        "operationId": "getRanking",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RankingPosition"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/quiz/question": {
      "get": {
        "tags": [
          "quiz-controller"
        ],
        "operationId": "getQuestion",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Question"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Answer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "selectedOption": {
            "$ref": "#/components/schemas/MovieCard"
          },
          "correct": {
            "type": "boolean"
          }
        }
      },
      "MovieCard": {
        "type": "object",
        "properties": {
          "imdbId": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "releasedYear": {
            "type": "string"
          },
          "posterUrl": {
            "type": "string"
          },
          "imdbRating": {
            "type": "number",
            "format": "double"
          },
          "imdbVotes": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "Question": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "cardOne": {
            "$ref": "#/components/schemas/MovieCard"
          },
          "cardTwo": {
            "$ref": "#/components/schemas/MovieCard"
          },
          "answer": {
            "$ref": "#/components/schemas/Answer"
          }
        }
      },
      "Quiz": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "username": {
            "type": "string"
          },
          "questionList": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Question"
            }
          },
          "mistakes": {
            "type": "integer",
            "format": "int32"
          },
          "active": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "version": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "Response": {
        "type": "object",
        "properties": {
          "imdbId": {
            "type": "string"
          }
        }
      },
      "RankingPosition": {
        "type": "object"
      }
    }
  }
}